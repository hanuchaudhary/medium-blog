generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  email    String @unique
  name     String
  password String
  blog     Blog[]
}

model Blog {
  id          String   @id @unique @default(uuid())
  title       String
  content     String
  publishedAt DateTime @default(now())
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}
